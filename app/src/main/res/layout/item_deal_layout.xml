<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="by Anton"
            android:textColor="@color/DigitalFarmersFaddedGray"
            android:visibility="invisible"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/offeres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Offers"
            android:textColor="@color/DigitalFarmersDark"
            android:layout_marginBottom="12dp"
            android:textSize="18dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/hiddenOwnerUID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/DigitalFarmersFaddedGray"/>

</LinearLayout>